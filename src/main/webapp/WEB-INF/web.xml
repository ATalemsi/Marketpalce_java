<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>GetProduct</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Product.GetProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProduct</servlet-name>
        <url-pattern>/products/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommandProductServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Cart.addProductCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommandProductServlet</servlet-name>
        <url-pattern>/command-product</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ShowCartServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Cart.ShowCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowCartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCartServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Cart.UpdateCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateCartServlet</servlet-name>
        <url-pattern>/update-cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.CheckoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
            <servlet-name>CommandServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.GetComandsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommandServlet</servlet-name>
        <url-pattern>/Commands</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCommandServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.ViewCommandServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCommandServlet</servlet-name>
        <url-pattern>/commands/details</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>CancelCommand</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.CancelCommandServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelCommand</servlet-name>
        <url-pattern>/commands/cancel</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UpdateCommandServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.ManageCommandServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateCommandServlet</servlet-name>
        <url-pattern>/commands/update-status</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>GetAllCommandsServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.GetAllCommandsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetAllCommandsServlet</servlet-name>
        <url-pattern>/commands/all</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UpdateCommandStatusServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.ManageCommandServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateCommandStatusServlet</servlet-name>
        <url-pattern>/commands/change-status</url-pattern> <!-- Mapping de l'URL -->
    </servlet-mapping>

    <servlet>
        <servlet-name>CommandSearchServlet</servlet-name>
        <servlet-class>com.market.marketplace.servlet.Command.SearchCommandServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommandSearchServlet</servlet-name>
        <url-pattern>/search/commands</url-pattern>
    </servlet-mapping>

</web-app>